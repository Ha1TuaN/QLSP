@model WebQLSP.Models.Supplier
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Supplier</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Mã nhà nhà cung cấp <span style="color: red">*</span></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sup_ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sup_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên nhà nhà cung cấp <span style="color: red">*</span></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sup_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sup_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Địa nhà nhà cung cấp <span style="color: red">*</span></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sup_Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sup_Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Số điện thoại <span style="color: red">*</span></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sup_Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sup_Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


